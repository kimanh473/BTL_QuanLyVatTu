
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QLVT.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><b>QUẢN LÝ VẬT TƯ</b></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Danh sách</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="List" asp-action="ListProduct">Hàng tồn kho</a></li>
                                <li><a class="dropdown-item" asp-controller="List" asp-action="ListImport">Lịch sử nhập kho</a></li>
                                <li><a class="dropdown-item" asp-controller="List" asp-action="ListExport">Lịch sử xuất kho</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="List" asp-action="Import">Nhập kho</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="List" asp-action="Export">Xuất kho</a>
                        </li>
                    </ul>
                </div>
                <button id="toggle-theme" class="btn btn-outline-dark no-outline ms-3">Chế độ tối</button>
            </div>
        </nav>
    </header>
    <div class="container-fluid mx-0 px-0">
        <main role="main" class="pb-3 pt-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top text-muted">
        <div class="container">
            <span style="color:dimgray">&copy; ASP.NET CORE MVC - Lập trình Web - Nguyễn Thị Kim Anh</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    .dropdown:hover .dropdown-menu {
        display: block;
        margin-top: 0;
    }

    footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        background-color:whitesmoke;
        z-index: 1000;
    }

    .no-outline:focus,
    .no-outline:active {
        outline: none;
        box-shadow: none;
    }
</style>

