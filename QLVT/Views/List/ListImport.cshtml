@model List<Import>
@{
    ViewData["Title"] = "QLVT - Lịch sử nhập kho";
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        <div class="container-sm mt-5">
            <h4>Lịch sử nhập kho</h4>
            <table class="table table-striped mb-5">
                <thead class="table-dark">
                    <tr>
                        <th>Mã chứng từ</th>
                        <th>Ngày nhập</th>
                        <th>Mã vật tư</th>
                        <th>Tên vật tư</th>
                        <th>Loại hàng</th>
                        <th>Số lượng</th>
                        <th>Đơn vị tính</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                        <th>Người giao</th>
                        <th>Người nhận</th>
                        <th>Ghi chú</th>                      
                    </tr>
                </thead>
                <tbody>
                    @foreach (var import in Model)
                    {
                        <tr>
                            <td>@import.doc_id</td>
                            <td>@import.import_date.ToString("MM/dd/yyyy")</td>
                            <td>@import.product_id</td>
                            <td>@import.product_name</td>
                            <td>@import.product_type</td>
                            <td>@import.quantity.ToString("N0")</td>
                            <td>@import.currency</td>
                            <td>@import.import_price.ToString("N0") VND</td>
                            <td>@import.total.ToString("N0") VND</td>
                            <td>@import.deliverer</td>
                            <td>@import.receiver</td>
                            <td>@import.note</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </body>
}
